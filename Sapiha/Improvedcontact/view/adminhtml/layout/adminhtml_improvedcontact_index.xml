<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Sapiha_Improvedcontact::improvedcontact</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Sapiha\Improvedcontact\Block\GridContainer" name="adminhtml.block.improvedcontact.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.improvedcontact.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">urlrewriteGrid</argument>
                        <argument name="dataSource" xsi:type="object" shared="false">Sapiha\Improvedcontact\Model\ResourceModel\Contact\Collection</argument>
                        <argument name="default_sort" xsi:type="string">entity_id</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.improvedcontact.grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">adminhtml/*/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="id" xsi:type="string">getId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.improvedcontact.grid.columnSet.feedback_id" as="feedback_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="id" xsi:type="string">id</argument>
                                <argument name="index" xsi:type="string">id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.improvedcontact.grid.columnSet.name" as="name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Name</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="id" xsi:type="string">name</argument>
                                <argument name="index" xsi:type="string">name</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.improvedcontact.grid.columnSet.email" as="email">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Email</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="id" xsi:type="string">email</argument>
                                <argument name="index" xsi:type="string">email</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.improvedcontact.grid.columnSet.phone" as="phone">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Phone</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="id" xsi:type="string">phone</argument>
                                <argument name="index" xsi:type="string">phone</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.improvedcontact.grid.columnSet.message" as="message">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Message</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="id" xsi:type="string">messagr</argument>
                                <argument name="index" xsi:type="string">message</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
